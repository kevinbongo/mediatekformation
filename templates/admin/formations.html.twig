{% extends "baseadmin.html.twig" %}
{% block body %}
	<p class="text-right">
		<a href="{{path('admin.formations.ajout')}}" class="btn btn-primary">Ajouter une nouvelle formation</a>
	</p>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>
					Formation
				</th>
				<th>
					Actions
				</th>
			</tr>
		</thead>
		<tbody>
			{% for formation in formations %}
				<tr>
					<td>
						<h5 class="text-primary">
							{{ formation.title }}
						</h5>
					</td>
					<td>
						<a href="{{ path('admin.formations.edit',{id:formation.id}) }}" class="btn btn-secondary">Editer</a>
						<a href="{{ path('admin.formations.suppr',{id:formation.id}) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer {{ formation.title }} ?')">Supprimer</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
